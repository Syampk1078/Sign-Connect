    android:verticalGap="4px"
    android:keyHeight="60dp"
    android:keyTextColor="@color/black">

    <!-- Define your numeric and special characters here -->
    <!-- For example, you can have a row for 1, 2, 3, etc. -->

    <Row>
        <Key
            android:keyIcon="@drawable/one"
            android:keyEdgeFlags="left"
            android:codes="49"
            />
        <Key android:keyIcon="@drawable/two"
            android:codes="50"/>
        <Key android:keyIcon="@drawable/three"
            android:codes="51"/>
        <Key android:keyIcon="@drawable/four"
            android:codes="52"/>
        <Key android:keyIcon="@drawable/five"
            android:codes="53"/>
        <Key android:keyIcon="@drawable/six"
            android:codes="54"/>
