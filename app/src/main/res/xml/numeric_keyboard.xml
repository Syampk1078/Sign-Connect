        <Key android:keyIcon="@drawable/nine"
            android:codes="57"/>
        <Key android:keyIcon="@drawable/zero"
            android:keyEdgeFlags="right"
            android:codes="48"/>
    </Row>

    <Row>
        <Key android:keyLabel="\u0040"
            android:keyEdgeFlags="left"
            android:codes="64"/>
        <Key android:keyLabel="#" android:codes="35"/>
        <Key android:keyLabel="\u20B9" android:codes="8377"/>
