<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="9.6%p"
    android:horizontalGap="4px"
    android:verticalGap="4px"
    android:keyHeight="60dp"
    android:keyTextColor="@color/white">

    <!-- Define your numeric and special characters here -->
    <!-- For example, you can have a row for 1, 2, 3, etc. -->


    <Row>
        <Key android:keyLabel="~"
            android:keyEdgeFlags="left"
            android:codes="126"/>
        <Key android:keyLabel="`" android:codes="96"/>
        <Key android:keyLabel="|" android:codes="124"/>
        <Key android:keyLabel="\u2022" android:codes="8226"/>
        <Key android:keyLabel="\u221A" android:codes="8730"/>
        <Key android:keyLabel="\u03C0" android:codes="960"/>
        <Key android:keyLabel="\u00F7" android:codes="247"/>
        <Key android:keyLabel="\u00D7" android:codes="215"/>
        <Key android:keyLabel="\u00A7" android:codes="167"/>
        <Key android:keyLabel="\u2206" android:keyEdgeFlags="right" android:codes="8710"/>
    </Row>

    <Row>
        <Key android:keyLabel="\u20AC"
            android:keyEdgeFlags="left"
            android:codes="8364"/>
        <Key android:keyLabel="\u00A5" android:codes="165"/>
        <Key android:keyLabel="$" android:codes="36"/>
        <Key android:keyLabel="\u00A2" android:codes="162"/>
        <Key android:keyLabel="^" android:codes="94"/>
        <Key android:keyLabel="\u00B0" android:codes="176"/>
        <Key android:keyLabel="=" android:codes="61"/>
        <Key android:keyLabel="{" android:codes="123"/>
        <Key android:keyLabel="}" android:codes="125"/>
        <Key android:keyLabel="\u005C" android:keyEdgeFlags="right" android:codes="92"/>
    </Row>

    <Row>
        <Key android:keyLabel="\?123" android:keyEdgeFlags="left" android:codes="-58"/>
        <Key android:keyLabel="%" android:codes="37"/>
        <Key android:keyLabel="\u00A9" android:codes="169"/>
        <Key android:keyLabel="\u00AE" android:codes="174"/>
        <Key android:keyLabel="\u2122" android:codes="8482"/>
        <Key android:keyLabel="\u2713" android:codes="10003"/>
        <Key android:keyLabel="[" android:codes="91"/>
        <Key android:keyLabel="]" android:codes="93"/>
        <Key android:keyIcon="@drawable/delete" android:keyWidth="20%p" android:keyEdgeFlags="right" android:isRepeatable="true" android:codes="-5"/>
    </Row>



    <Row android:rowEdgeFlags="bottom">
        <Key android:keyIcon="@drawable/wave" android:keyWidth="20%p" android:keyEdgeFlags="left" android:codes="-123"/>
        <Key android:keyLabel="&lt;" android:keyWidth="10%p"  android:codes="60"/>
        <Key android:keyIcon="@drawable/space" android:keyWidth="40%p" android:isRepeatable="true" android:codes="32"/>
        <Key android:keyLabel="&gt;" android:keyWidth="10%p"  android:codes="62"/>
        <Key android:keyIcon="@drawable/enter" android:keyWidth="20%p" android:keyEdgeFlags="right" android:codes="-4"/>

    </Row>

</Keyboard>
